generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  email    String  @unique
  password String
  name     String
  role     String
}

model Type {
id String @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  products Product[]
  createdOn  DateTime @default(now())
  updatedOn  DateTime @updatedAt
  createdBy  String
  updatedBy  String
}

model Color {
id String @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  productColors ProductColor[]
  createdOn  DateTime @default(now())
  updatedOn  DateTime @updatedAt
  createdBy  String
  updatedBy  String
}

model ProductColor {
id String @id @default(auto()) @map("_id") @db.ObjectId
  color     Color    @relation(fields: [colorId], references: [id])
  colorId   String
  image     String
  model     String // URL to the model
  product   Product @relation(fields: [productId], references: [id])
  productId String
}

model Product {
id String @id @default(auto()) @map("_id") @db.ObjectId
  image          String
  name           String
  type           Type           @relation(fields: [typeId], references: [id])
  typeId         String
  description    String?
  productColors  ProductColor[] // One-to-many relation
  createdOn      DateTime       @default(now())
  updatedOn      DateTime       @updatedAt
  createdBy      String
  updatedBy      String
}

model JournalEntry {
id String @id @default(auto()) @map("_id") @db.ObjectId
  entry     String
  createdOn DateTime @default(now())
  createdBy String
}
